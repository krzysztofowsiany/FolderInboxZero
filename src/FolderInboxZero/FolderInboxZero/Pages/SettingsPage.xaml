<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:FolderInboxZero.Pages.Base"
             x:Class="FolderInboxZero.Pages.SettingsPage"
             xmlns:vm="clr-namespace:FolderInboxZero.ViewModels"
             x:TypeArguments="vm:SettingsViewModel"
             x:DataType="vm:SettingsViewModel"
             Title="Settings">
    <VerticalStackLayout>
        <Label 
            Text="Folder Inbox Zero Settings"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="Folder Inbox Zero Settings"
            VerticalOptions="Center" 
            HorizontalOptions="Start" />
        <Label 
            Text="{Binding CurrentInboxFolder}"
            VerticalOptions="Center" 
            HorizontalOptions="Start" />

        <Button Command="{Binding PickInboxFolderCommand}"
          Text="Pick Inbox Folder"
          HorizontalOptions="Start"/>

        <Button Command="{Binding BackCommand}"
          Text="Back to main"
          VerticalOptions="End" 
          HorizontalOptions="End"/>
    </VerticalStackLayout>
</pages:BasePage>